@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "All Employees";
}

<a class="btn btn-primary" asp-action="Create">Add Employee</a>


    <form class="row mt-5">
       <div class="col-8">
        <input class="form-control" type="text" name="SearchValue" placeholder="Employee Name" />
       </div> 
       
       <div class="col-4">
        <input type="submit" class="btn btn-info value" value="Search" />
       </div>
       
    </form>

@if(Model.Count() > 0)
{
    <table class="table table-striped mt-5">
        <thead>
            <td>@Html.DisplayNameFor(e=>e.Id)</td>
            <td>@Html.DisplayNameFor(e => e.Name)</td>
            <td>@Html.DisplayNameFor(e => e.Age)</td>
            <td>@Html.DisplayNameFor(e => e.Address)</td>
            <td>@Html.DisplayNameFor(e => e.Salary)</td>
            <td>@Html.DisplayNameFor(e => e.Department)</td>
            <td>@Html.DisplayNameFor(e => e.IsActive)</td>
            <td>@Html.DisplayNameFor(e => e.Email)</td>
            <td>@Html.DisplayNameFor(e => e.Phone)</td>
            <td>@Html.DisplayNameFor(e => e.HiringDate)</td>
            <td>Details</td>
            <td>Update</td>
            <td>Delete</td>
        </thead>

        <tbody>
            @foreach(var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Address</td>
                    <td>@emp.Salary</td>
                    <td>@Html.DisplayFor(e => emp.Department.Name)</td>
                    <td>@emp.IsActive</td>
                    <td>@emp.Email</td>
                    <td>@emp.Phone</td>
                    <td>@emp.HiringDate</td>
                    <partial name="../_ButtonsPartialView" model="emp.Id" />

                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="alert alert-warning">
        <h2>There are no Employees</h2>
    </div>
}

