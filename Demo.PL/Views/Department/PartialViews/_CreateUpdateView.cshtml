@model Department

<div>
    <label class="col-form-label" asp-for="Code"></label>
    <input class="form-control" asp-for="Code" />
    <span class="text-warning" asp-validation-for="Code" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span class="text-warning" asp-validation-for="Name"></span>
</div>

<div>
    <label class="col-form-label" asp-for="CreationDate"></label>
    <input class="form-control" asp-for="CreationDate" type="datetime-local" />
</div>

