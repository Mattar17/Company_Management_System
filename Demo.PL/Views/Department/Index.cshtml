@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}

<a class="btn btn-primary" asp-controller="Department" asp-action="Create">Add Department</a>

@if (Model.Count() > 0)
{
    <h1>All Departments</h1>

    <table class="table table-striped  table-hover mt-3 p-3">
        <thead>
        <td>@Html.DisplayNameFor(d=>d.Code)</td>
        <td>@Html.DisplayNameFor(d => d.Name)</td>
        <td>@Html.DisplayNameFor(d => d.CreationDate)</td>
        <td>Datails</td>
        <td>Update</td>
        <td>Delete</td>
        </thead>

        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreationDate</td>
                    <partial name="../_ButtonsPartialView" model="department.Id"/>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-5 alert alert-warning">
        <h1>There are no Departments</h1>
    </div>
}



